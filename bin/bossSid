#! /usr/bin/perl
$q = "select SID from JOB where ID=$ARGV[0]";
&bossSQL($q);
print "$sqlVal{SID}\n";

sub bossSQL {
    $query = "boss SQL -query \"$_[0]\" |";
    open(SQL,$query); $fields=<SQL>; $head=<SQL>; $line=<SQL>; close(SQL);
    my @nn = split(",",$fields);
    my $N = $nn[0];
    $nn[0] = 0;
    my $offs = 1;
    foreach $i ( 1 .. $N ) {
	$offs += $nn[$i-1];
	my $key = substr($head,$offs,$nn[$i]); $key =~ s/\s+$//;
	my $val = substr($line,$offs,$nn[$i]); $val =~ s/\s+$//;
	$sqlVal{$key} = $val ;
    }
}
